// Object-oriented counter using closures
private function Counter(initial: int) {
    let state = {"count": initial};
    
    let self = {
        "get": () => state.count,
        "increment": () => {
            state.count = state.count + 1;
            self
        },
        "decrement": () => {
            state.count = state.count - 1;
            self
        },
        "reset": () => {
            state.count = initial;
            self
        }
    };
    
    return self;
}

