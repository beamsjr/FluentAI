// Pattern matching demo
private function describe_value(val) {
    match val {
        0 => "Zero",
        1..10 => "Small positive",
        -10..-1 => "Small negative", 
        n if n > 10 => "Large positive",
        n if n < -10 => "Large negative",
        _ => "Unknown"
    }
}

