    // Atom implementation for demo
    let atom = (initial_value) => {
        let value = initial_value;
        (op, ...args) => {
            cond([
                [op == 'get, value],
                [op == 'set!, { set!(value, args[0]) }],
                [op == 'swap!, { set!(value, args[0](value)) }]
            ])
        }
    };
    
    let swap! = (atom_ref, f) => {
        atom_ref('swap!, f)
    };
    
